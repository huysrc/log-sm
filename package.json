{
  "name": "log-sm",
  "version": "1.0.0",
  "description": "Smart Minimal Logger - zero deps, tiny, fast, and flexible structured logging for Node, Homey, and Web.",
  "keywords": [
    "logger",
    "minimal",
    "structured",
    "tiny",
    "smart",
    "console",
    "logging",
    "typescript"
  ],
  "license": "MIT",
  "author": "Huy Nguyen",
  "repository": {
    "type": "git",
    "url": "https://github.com/huysrc/log-sm.git"
  },
  "bugs": {
    "url": "https://github.com/huysrc/log-sm/issues"
  },
  "homepage": "https://github.com/huysrc/log-sm#readme",
  "type": "module",
  "sideEffects": [
    "./dist/redact.*"
  ],
  "main": "./dist/core.cjs",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs",
      "default": "./dist/core.js"
    },
    "./format": {
      "types": "./dist/format.d.ts",
      "import": "./dist/format.js",
      "require": "./dist/format.cjs",
      "default": "./dist/format.js"
    },
    "./redact": {
      "types": "./dist/redact.d.ts",
      "import": "./dist/redact.js",
      "require": "./dist/redact.cjs",
      "default": "./dist/redact.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "release": "changeset publish",
    "test": "npm run build && node --test",
    "clean-test-pack-check": "npm ci && npm test && npm pack --dry-run && node -e \"import('log-sm').then(m=>console.log(Object.keys(m)))\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
